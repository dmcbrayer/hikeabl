<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Listing Users</h1>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>User</th>
          <th>Avatar</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= image_tag user.avatar.url(:thumb) %></td>
         
            <td><%= link_to 'Show', user %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
</div>
