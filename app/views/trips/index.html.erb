<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Listing trips</h1>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Starts on</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @trips.each do |trip| %>
          <tr>
            <td><%= link_to trip.name, trip %></td>
            <td><%= trip.user.email %></td>
            <td><%= link_to 'Show', trip %></td>
            <% if trip.user == current_user %>
              <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
              <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <% if user_signed_in? %>
      <%= link_to 'New Trip', new_trip_path %>
    <% end %>
  </div>
</div>
